.tabbar
  position fixed
  z-index 5
  background-color #fff
  bottom 0
  display flex
  box-sizing border-box
  width 100%
  height 98px
  justify-content space-around
  border-top 1px solid #eee
  .tabItem
    flex 1
    display flex
    justify-content center
    flex-direction column
    text-decoration none
    text-align center
    color #666
    &.active
        color #E03036
    .iconfont
      font-size 42px
    span
      font-size 24px