.bigProWrap
    width 100%
    background-color #eee
    margin-top 30px
    border-bottom 40px solid #eee
    .floorTop
      width 100%
      height 220px
      position relative
      .proItem
        display block
        width 100%
        height 100%
        background-image url('https://yanxuan.nosdn.127.net/6ab14b8fbb1e2f5b5d39f7ff910cfa68.png?quality=75&type=webp&imageView&thumbnail=750x0')
        background-size cover
        background-repeat no-repeat
        .promGood
          position absolute
          left 10%
          top 14%
          width 160px
          height 160px
          text-align center
          line-height 160px
    .floorFirst
      width 710px
      height 160px
      margin 20px auto 0
      .promItem
        display block
        width 100%
        height 100%
        background-image url('https://yanxuan.nosdn.127.net/150ef5c2553d7cd5d1eab92baa9d0e68.png?quality=75&type=webp&imageView&thumbnail=750x0')
        background-size cover
        background-repeat no-repeat